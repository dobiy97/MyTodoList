<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="32dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/txtTask"
            android:hint="Enter Task Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="77dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/txtMessage"
            android:hint="Enter Task Description"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="122dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/btnMessage"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="359dp" tools:layout_editor_absoluteY="311dp"
            android:id="@+id/txtNotes" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>